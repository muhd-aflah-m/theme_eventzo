<!-- templates/snippets.xml -->
<odoo>
    <template id="s_eventzo_hero" name="Eventzo Hero Section">
        <section class="s_eventzo_hero o_cc o_cc1 pt64 pb32" data-name="Eventzo Hero"
                 data-bg-images='["theme_eventzo/static/src/img/out_marr4.png", "theme_eventzo/static/src/img/wedding2.jpg", "theme_eventzo/static/src/img/wedding3.jpg", "theme_eventzo/static/src/img/wedding6.jpg"]'
                 data-slide-interval="3000">
            <div class="eventzo_hero_bg_slider">
                <div class="eventzo_hero_bg_slide js_active"></div>
                <div class="eventzo_hero_bg_slide"></div>
            </div>
            <div class="eventzo_hero_bg_overlay"></div>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 eventzo_hero_content"><br/><br/><br/><br/>
                        <h1 class="eventzo_title mb-4">Partner with Eventzo Event Management</h1>
                        <a href="/contact" class="btn eventzo_cta_btn">Contact Us</a>
                    </div>
                </div>
            </div>
            <div class="eventzo_floating_elements">
                <div class="eventzo_float_item eventzo_float_1"></div>
                <div class="eventzo_float_item eventzo_float_2"></div>
                <div class="eventzo_float_item eventzo_float_3"></div>
            </div>
        </section>
    </template>
</odoo>