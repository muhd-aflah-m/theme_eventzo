<!-- templates/about_hero.xml -->
<odoo>
    <template id="s_eventzo_about_hero" name="Eventzo About Hero">
        <section class="s_eventzo_about_hero" data-name="Eventzo About Hero">
            <div class="eventzo_about_hero_bg">
                <img src="/theme_eventzo/static/src/img/about.jpg" alt="About Eventzo"/>
            </div>
            <div class="eventzo_about_hero_overlay"></div>
            <div class="container">
                <div class="eventzo_about_hero_content">
                    <h1 class="eventzo_about_hero_title">About Eventzo Event Management</h1>
                    <p class="eventzo_about_hero_subtitle">
                        From concept to execution, World's premier event management company delivers<br/>
                        flawless experiences tailored to your unique vision.
                    </p>
                </div>
            </div>
        </section>
    </template>
</odoo>