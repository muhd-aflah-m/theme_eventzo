<odoo>
    <template id="s_eventzo_work_with_us" name="Eventzo Work With Us Section">
        <section class="s_eventzo_work_with_us o_cc o_cc1" data-name="Eventzo Work With Us">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Left Column -->
                    <div class="col-lg-6 col-md-12 text-center text-lg-start mb-4 mb-lg-0">
                        <img src="/theme_eventzo/static/src/img/header.png" alt="Eventzo" class="eventzo_work_logo mb-3"/>

                        <h2 class="eventzo_work_title mb-4">WANT TO WORK WITH US?</h2>

                        <div class="eventzo_contact_info mb-3">
                            <div class="eventzo_contact_item">
                                <i class="fa fa-phone me-3"></i>
                                <div>
                                    <h6 class="mb-0 text-muted">TALK TO OUR CLIENT SUPPORT TEAM</h6>
                                    <span class="eventzo_contact_value">+123-11-011</span>
                                </div>
                            </div>

                            <div class="eventzo_contact_item mt-3">
                                <i class="fa fa-envelope me-3"></i>
                                <div>
                                    <h6 class="mb-0 text-muted">WRITE TO US ABOUT YOUR NEEDS</h6>
                                    <span class="eventzo_contact_value">eventzoeventmanagement@gmail.com</span>
                                </div>
                            </div>
                        </div>

                        <!-- Social Icons -->
                        <div class="eventzo_socials mt-4">
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                        </div>
                    </div>

                    <!-- Right Column (Form) -->
                    <div class="col-lg-6 col-md-12">
                        <form class="eventzo_contact_form">
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Enter your Full Name" required="True"/>
                            </div>
                            <div class="mb-3">
                                <input type="tel" class="form-control" placeholder="Enter your Phone Number" required="True"/>
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Enter your Email ID" required="True"/>
                            </div>
                            <div class="mb-3">
                                <textarea rows="4" class="form-control" placeholder="Message" required="True"></textarea>
                            </div>
                            <button type="submit" class="btn eventzo_submit_btn">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
