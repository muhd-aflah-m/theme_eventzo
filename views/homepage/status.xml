<!-- templates/stats_gallery_section.xml -->
<odoo>
    <template id="s_eventzo_stats_gallery" name="Eventzo Stats and Gallery Section">
        <section class="s_eventzo_stats_gallery pt96 pb96" data-name="Eventzo Stats Gallery">
            <div class="container">
                <!-- Stats Counter Section -->
                <div class="row eventzo_stats_row mb-5">
                    <div class="col-6 col-md-3 mb-4 mb-md-0">
                        <div class="eventzo_stat_item text-center">
                            <h2 class="eventzo_stat_number" data-count="15">0</h2>
                            <p class="eventzo_stat_label">Years of Experience</p>
                        </div>
                    </div>
                    <div class="col-6 col-md-3 mb-4 mb-md-0">
                        <div class="eventzo_stat_item text-center">
                            <h2 class="eventzo_stat_number" data-count="1700">0</h2>
                            <p class="eventzo_stat_label">Events Covered</p>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="eventzo_stat_item text-center">
                            <h2 class="eventzo_stat_number" data-count="1500">0</h2>
                            <p class="eventzo_stat_label">Satisfied Clients</p>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="eventzo_stat_item text-center">
                            <h2 class="eventzo_stat_number" data-count="4.8" data-decimal="true">0</h2>
                            <p class="eventzo_stat_label">Customer Rating</p>
                        </div>
                    </div>
                </div>

                <!-- Gallery Section -->
                <div class="row mt-5">
                    <div class="col-12 text-center mb-4">
                        <h2 class="eventzo_gallery_title">Our Work Gallery</h2>
                        <p class="eventzo_gallery_subtitle">Capturing Beautiful Moments from Our Events</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="eventzo_gallery_wrapper">
                            <div class="row g-3">
                                <!-- Gallery Item 1 -->
                                <div class="col-12 col-md-4">
                                    <div class="eventzo_gallery_item js_gallery_item" data-index="0">
                                        <img src="/theme_eventzo/static/src/img/weddingceremony.jpg" alt="Wedding Event"/>
                                        <div class="eventzo_gallery_overlay">
                                            <div class="eventzo_gallery_content">
                                                <i class="fa fa-search-plus"></i>
                                                <p class="eventzo_gallery_caption">Wedding Ceremony</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Gallery Item 2 -->
                                <div class="col-12 col-md-4">
                                    <div class="eventzo_gallery_item js_gallery_item" data-index="1">
                                        <img src="/theme_eventzo/static/src/img/reception3.jpg" alt="Reception Event"/>
                                        <div class="eventzo_gallery_overlay">
                                            <div class="eventzo_gallery_content">
                                                <i class="fa fa-search-plus"></i>
                                                <p class="eventzo_gallery_caption">Reception Party</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Gallery Item 3 -->
                                <div class="col-12 col-md-4">
                                    <div class="eventzo_gallery_item js_gallery_item" data-index="2">
                                        <img src="/theme_eventzo/static/src/img/corporate.jpg" alt="Corporate Event"/>
                                        <div class="eventzo_gallery_overlay">
                                            <div class="eventzo_gallery_content">
                                                <i class="fa fa-search-plus"></i>
                                                <p class="eventzo_gallery_caption">Corporate Event</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Gallery Item 4 -->
                                <div class="col-12 col-md-4">
                                    <div class="eventzo_gallery_item js_gallery_item" data-index="3">
                                        <img src="/theme_eventzo/static/src/img/birdthday.jpg" alt="Birthday Party"/>
                                        <div class="eventzo_gallery_overlay">
                                            <div class="eventzo_gallery_content">
                                                <i class="fa fa-search-plus"></i>
                                                <p class="eventzo_gallery_caption">Birthday Celebration</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Gallery Item 5 -->
                                <div class="col-12 col-md-4">
                                    <div class="eventzo_gallery_item js_gallery_item" data-index="4">
                                        <img src="/theme_eventzo/static/src/img/engagmnts.jpeg" alt="Engagement Event"/>
                                        <div class="eventzo_gallery_overlay">
                                            <div class="eventzo_gallery_content">
                                                <i class="fa fa-search-plus"></i>
                                                <p class="eventzo_gallery_caption">Engagement Ceremony</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Gallery Item 6 -->
                                <div class="col-12 col-md-4">
                                    <div class="eventzo_gallery_item js_gallery_item" data-index="5">
                                        <img src="/theme_eventzo/static/src/img/conference2.jpg" alt="Conference Event"/>
                                        <div class="eventzo_gallery_overlay">
                                            <div class="eventzo_gallery_content">
                                                <i class="fa fa-search-plus"></i>
                                                <p class="eventzo_gallery_caption">Conference Setup</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Gallery Item 7 -->
                                <div class="col-12 col-md-6">
                                    <div class="eventzo_gallery_item js_gallery_item" data-index="6">
                                        <img src="/theme_eventzo/static/src/img/outdoor.jpg" alt="Outdoor Event"/>
                                        <div class="eventzo_gallery_overlay">
                                            <div class="eventzo_gallery_content">
                                                <i class="fa fa-search-plus"></i>
                                                <p class="eventzo_gallery_caption">Outdoor Event</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Gallery Item 8 -->
                                <div class="col-12 col-md-6">
                                    <div class="eventzo_gallery_item js_gallery_item" data-index="7">
                                        <img src="/theme_eventzo/static/src/img/luxury.jpg" alt="Decoration Setup"/>
                                        <div class="eventzo_gallery_overlay">
                                            <div class="eventzo_gallery_content">
                                                <i class="fa fa-search-plus"></i>
                                                <p class="eventzo_gallery_caption">Decoration Setup</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Gallery Item 9 -->
                                <div class="col-12">
                                    <div class="eventzo_gallery_item eventzo_gallery_wide js_gallery_item" data-index="8">
                                        <img src="/theme_eventzo/static/src/img/grand.png" alt="Grand Event"/>
                                        <div class="eventzo_gallery_overlay">
                                            <div class="eventzo_gallery_content">
                                                <i class="fa fa-search-plus"></i>
                                                <p class="eventzo_gallery_caption">Grand Celebration</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lightbox Modal -->
            <div class="eventzo_lightbox js_lightbox">
                <button class="eventzo_lightbox_close js_lightbox_close">
                    <i class="fa fa-times"></i>
                </button>
                <button class="eventzo_lightbox_prev js_lightbox_prev">
                    <i class="fa fa-chevron-left"></i>
                </button>
                <button class="eventzo_lightbox_next js_lightbox_next">
                    <i class="fa fa-chevron-right"></i>
                </button>
                <div class="eventzo_lightbox_content">
                    <img class="js_lightbox_img" src="" alt="Gallery Image"/>
                    <p class="eventzo_lightbox_caption js_lightbox_caption"></p>
                </div>
            </div>
        </section>
    </template>
</odoo>